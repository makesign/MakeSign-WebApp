<div class="signin-box">
  <div class="logo-section">
    <%= image_tag "Makesign_Color.png", alt: "Logo", class: "signin-logo" %>
  </div>
  <div class="fillout-section">
    <h1 class="signin-title">SIGN IN</h1>

    <%= form_with model: @user, url: session_path do |form| %>
      <div class="input">
        <%= form.label :email, "E-Mail" %>
        <%= form.email_field :email, class: "form-control form-input", placeholder: "name@example.com" %>
      </div>

      <div class="input">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control form-input" %>
        <%= link_to "Forgot your password?", new_password_reset_path, class: "undersection" %>
      </div>

      <div class="signin-submit">
        <%= form.submit "Sign In", class: "submit-button" %>
        <div class="signup-section undersection">
          <p>New to MakeSign? </p>  
          <%= link_to "Sign Up Now.", new_registration_path, class: "signup-now" %>
        </div>
      </div>
    <% end %>

  </div>
</div>